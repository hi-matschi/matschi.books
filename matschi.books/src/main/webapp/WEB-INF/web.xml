<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  
  <display-name>matschi.books</display-name>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>Book</servlet-name>
    <servlet-class>fr.afpa.matschi.book.web.AppBook</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Book</servlet-name>
  	<url-pattern>/book/</url-pattern>
  	<url-pattern>/book/edit/*</url-pattern>
  	<url-pattern>/book/list</url-pattern>
  	<url-pattern>/book/add</url-pattern>
  	<url-pattern>/book/remove/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Author</servlet-name>
    <servlet-class>fr.afpa.matschi.book.web.AppAuthor</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Author</servlet-name>
  	<url-pattern>/author</url-pattern>
  	<url-pattern>/author/list</url-pattern>
  	<url-pattern>/author/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>fr.afpa.matschi.book.web.AppUser</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>User</servlet-name>
  	<url-pattern>/user</url-pattern>
  	<url-pattern>/user/list</url-pattern>
  	<url-pattern>/user/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Grade</servlet-name>
    <servlet-class>fr.afpa.matschi.book.web.AppGrade</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Grade</servlet-name>
  	<url-pattern>/grade/list</url-pattern>
  	<url-pattern>/grade/add</url-pattern>
  </servlet-mapping>
  
</web-app>